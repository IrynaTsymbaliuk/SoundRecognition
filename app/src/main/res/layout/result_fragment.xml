<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v015"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v085"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Is this the right song?"
        android:textColor="@color/lighter_gray"
        android:fontFamily="@font/d_kallisto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sound_wave"
        app:layout_constraintStart_toStartOf="@id/guideline_v015"/>

    <ImageView
        android:id="@+id/sound_wave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_sound_wave"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="@id/guideline_v085"
        app:layout_constraintStart_toStartOf="@id/guideline_v015"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/like"/>

    <ImageView
        android:id="@+id/dislike"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_dislike_border"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sound_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/like"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_like_border"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dislike"
        app:layout_constraintTop_toBottomOf="@id/sound_wave" />

</androidx.constraintlayout.widget.ConstraintLayout>